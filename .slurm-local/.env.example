# Example compose environment for .slurm-local/docker-compose.yml
#
# Normally you do NOT need to edit this manually:
#   bash setup_slurm_local.sh up
# will (re)generate .slurm-local/.env for your machine.
#
# If you want a stable, committed reference, copy this to .slurm-local/.env.

SLURM_WORKDIR=/path/to/workdir
SLURM_IMAGE_NAME=slurm-local:dev
SLURM_CONTAINER_NAME=slurm-local
SLURM_NODE1_NAME=slurm-local-1
SLURM_NODE2_NAME=slurm-local-2
SLURM_CTLD_HOST=slurm-local
SLURM_GPU_COUNT=

# Host identity (optional; setup_slurm_local.sh sets these automatically)
SLURM_HOST_USER_NAME=youruser
SLURM_HOST_UID=1000
SLURM_HOST_GID=1000

# Multi-tenant
SLURM_ADMIN_ACCOUNT=admin
# Tenants are normalized to lowercase.
# Format: name[:uid[:gid]] (comma-separated)
SLURM_TENANTS=teama:10001:10001,teamb:10002:10002
SLURM_TENANTS_DIR=/work/tenants
SLURM_TENANT_UID_BASE=10000
SLURM_TENANT_GID_BASE=10000

# Optional isolation
SLURM_ENABLE_CGROUP=0
SLURM_PRIVILEGED=false

# Accounting DB
SLURM_DB_HOST=mariadb
SLURM_DB_PORT=3306
SLURM_DB_NAME=slurm_acct_db
SLURM_DB_USER=slurm
SLURM_DB_PASS=slurm
SLURM_DB_ROOT_PASS=slurmroot
SLURM_DB_CONTAINER_NAME=slurm-local-db
SLURM_DBD_PORT=6819
